@model Automotive_Project.ViewModels.RegistrationViewModel;

<div class="registration-page">
    <div class="registration-box">
        <h2>Registration</h2>
        <br />
        <form class="registration-form" asp-action="Registration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.Message != null)
            {
                <div class="form-group" style="color: green;">@ViewBag.Message</div>
            }
            <div class="form-group">
                <input asp-for="FirstName" placeholder="FirstName"  />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastName" placeholder="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <input asp-for="Email" placeholder="Email" />
                 <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" />
               <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <a asp-controller="Account" asp-action="Login" class="forgot-password">Already have account?</a>
            <br />
            <input type="submit" value="Create" class="btn btn-primary"/>
        </form>
    </div>
</div>
