@model Automotive_Project.ViewModels.ResetPasswordViewModel;

<div class="resetPassword-page">
    <div class="resetPassword-box">
        <h2>Reset Password</h2>
        <br />

        @if (ViewBag.ErrorMessage != null)
        {
            <div class='alert alert-danger alert-dismissible fade show' role='alert'>
                <strong>@ViewBag.ErrorMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }
        else if (ViewBag.SuccessMessage != null)
        {
            <div class='alert alert-success alert-dismissible fade show' role='alert'>
                <strong>@ViewBag.SuccessMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }

        <form asp-action="ResetPassword" method="post" class="resetPassword-form">
            <input type="hidden" name="token" value="@ViewBag.Token" />
            <input type="hidden" asp-for="Email" />

            <div class="form-group">
                <input asp-for="Password" type="password" placeholder="New Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <a asp-controller="Account" asp-action="Login" class="forgot-password">Login</a>
            <br />
            <button type="submit">Reset</button>
        </form>
    </div>
</div>