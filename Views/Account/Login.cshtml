@model Automotive_Project.ViewModels.LoginViewModel



<div class="login-page">
    <div class="login-box">
        <h2>Login</h2>
        <br />
        <form class="login-form">
            <input type="email" placeholder="Email" required />
            <input type="password" placeholder="Password" required />
            <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-password">Forgot password?</a>
            <br />
            <button type="submit">Log in</button>
            <p class="p-text">- Or -</p>
            <a asp-controller="Account" asp-action="Registration" class="register-now">Register Now</a>
        </form>
    </div>
</div>
