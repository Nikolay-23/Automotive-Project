@model Automotive_Project.ViewModels.LoginViewModel



<div class="login-page">
    <div class="login-box">
        <h2>Login</h2>
        <br />
        <form asp-action="Login" class="login-form">
            <div class="form-group">
              <input asp-for="Email" placeholder="Email" />
              <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
              <input asp-for="Password" placeholder="Password" />
              <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-password">Forgot password?</a>
            <br />
            <button type="submit">Log in</button>
            <p class="p-text">- Or -</p>
            <a asp-controller="Account" asp-action="Registration" class="register-now">Register Now</a>
        </form>
    </div>
</div>
